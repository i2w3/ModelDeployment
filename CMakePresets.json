{
    "version": 6,
    "configurePresets": [
        {
            "name": "ninja-vcpkg",
            "generator": "Ninja",
            "hidden": true
        },
        {
            "name": "release",
            "inherits": "ninja-vcpkg",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "debug",
            "inherits": "ninja-vcpkg",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}